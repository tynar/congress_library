extends ../layout/index.pug
block content
  if success
    .alert.alert-success
      =message
  else if error
    .alert.alert-danger
      =message
  form(action='/feedbacks/update', method='POST')
    .form-row
    .form-group
      label(for='inputName') Name
      input#inputName.form-control(type='text', placeholder='Name', name='faName', required='true', value=`${feedback.name}`)
    .form-group
      label(for='inputEmail') Email
      input#inputEmail.form-control(type='email', placeholder='Email', name='faEmail', required='true', value=`${feedback.email}`)
    .form-group
      label(for='message') Message
      input#inputMessage.form-control(type='text', placeholder='Message', name='faMessage', required='true', value=`${feedback.message}`)
    input(type='hidden', value=`${feedback.id}`, name='faId')  
    button.btn.btn-primary(type='submit') Update feedback