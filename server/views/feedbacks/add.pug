extends ../layout/index.pug
block content
  if success
    .alert.alert-success
      =message
  else if error
    .alert.alert-danger
      =message
  form(action='/feedbacks', method='POST')
    .form-row
    .form-group
      label(for='inputName') Name
      input#inputName.form-control(type='text', placeholder='Name', name='faName')
    .form-group
      label(for='inputEmail') Email
      input#inputEmail.form-control(type='email', placeholder='Email', name='faEmail')
    .form-group
      label(for='message') Message
      input#inputMessage.form-control(type='text', placeholder='Message', name='faMessage')
      
    button.btn.btn-primary(type='submit') Save new feedback